<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="bohdan">
        <createTable tableName="role">
            <column name="id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="role_name" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="bohdan">
        <insert tableName="role">
            <column name="role_name" value="USER"/>
        </insert>

        <insert tableName="role">
            <column name="role_name" value="DELIVERYMAN"/>
        </insert>
        <insert tableName="role">
            <column name="role_name" value="ADMIN"/>
        </insert>
        <insert tableName="role">
            <column name="role_name" value="COOK"/>
        </insert>
        <insert tableName="role">
            <column name="role_name" value="DELIVERYMAN"/>
        </insert>
    </changeSet>

    <changeSet id="3" author="bohdan">
        <createTable tableName="status">
            <column name="id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints unique="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="bohdan">
        <insert tableName="status">
            <column name="status" value="ACCEPTED"/>
        </insert>
        <insert tableName="status">
            <column name="status" value="IN_PROCESS"/>

        </insert>
        <insert tableName="status">
            <column name="status" value="READY"/>

        </insert>
        <insert tableName="status">
            <column name="status" value="IN_DELIVER"/>

        </insert>
    </changeSet>

</databaseChangeLog>
